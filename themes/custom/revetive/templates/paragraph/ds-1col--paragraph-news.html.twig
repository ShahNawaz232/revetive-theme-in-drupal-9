<div class="page-section">
    <div class="container">
      <div class="text-center">
        <div class="subhead">{{ content.field_news_subhead }}</div>
        <h2 class="title-section">{{ content.field_news_title }}</h2>
      </div>
      <div class="row my-5 card-blog-row">
        {% for key,value in content.field_news_img['#items'] %}
        <div class="col-lg-3 py-3">
          <div class="card-blog">
            <div class="header">
              <div class="avatar">
                {{ content.field_news_img[key] }}
              </div>
              <div class="entry-footer">
                <div class="post-author"></div>
                <a href="#" class="post-date">{{ content.field_news_date[key] }}</a>
              </div>
            </div>
            <div class="body">
              <div class="post-title"><a href="blog">{{ content.field_news_heading[key] }}</a></div>
              <div class="post-excerpt ">{{ content.field_news_body[key] }}</div>
            </div>
            <div class="footer">
              <a href="blog">Read More  <span class="mai-chevron-forward text-sm"></span></a>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>

      <div class="text-center">
        <a href="blog" class="btn btn-primary">View More</a>
      </div>

    </div> <!-- .container -->
  </div>